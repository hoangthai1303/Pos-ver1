@{
    Layout = "";
    eTraining.BussinessModels.FormControl control = (eTraining.BussinessModels.FormControl)ViewData["FormControl"];
    string formGroup = ViewData["FormGroup"].ToString();
}

@if (control != null)
{
    <div class="col-lg-4 col-md-6 col-sm-12">
        <div class="border-checkbox-section">
            <div class="checkbox-fade fade-in-primary">
                <label for="@(formGroup + control.Key)">
                    <input type="checkbox" name="@control.Name" id="@(formGroup + control.Key)" value="@control.Value" data-required="@control.IsRequire" data-number="@control.IsNumber" data-email="@control.IsEmail">
                    <span class="cr">
                        <i class="cr-icon fa fa-check txt-primary"></i>
                    </span>
                    <span>@control.Display</span>
                </label>
                @if (!String.IsNullOrEmpty(control.Note))
                {
                    <small class="form-text text-muted">@control.Note</small>
                }
            </div>
        </div>
    </div>
}

