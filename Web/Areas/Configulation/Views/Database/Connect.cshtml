@model  Configulation.Models.DatabaseModel

@{
    Layout = "";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Database - Connect</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="" />
    <meta name="keywords" content="" />
    <link rel="stylesheet" type="text/css" href="/Content/Templates/ETConfigulation/css/animate.css">
    <link rel="stylesheet" type="text/css" href="/Content/Templates/ETConfigulation/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/Content/Templates/ETConfigulation/css/line-awesome.css">
    <link rel="stylesheet" type="text/css" href="/Content/Templates/ETConfigulation/css/line-awesome-font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="/Content/Templates/ETConfigulation/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="/Content/Templates/ETConfigulation/lib/slick/slick.css">
    <link rel="stylesheet" type="text/css" href="/Content/Templates/ETConfigulation/lib/slick/slick-theme.css">
    <link rel="stylesheet" type="text/css" href="/Content/Templates/ETConfigulation/css/style.css">
    <link rel="stylesheet" type="text/css" href="/Content/Templates/ETConfigulation/css/responsive.css">
</head>
<body class="sign-in">
    <div class="wrapper">
        <div class="sign-in-page">
            <div class="signin-popup">
                <div class="signin-pop">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="cmp-info">
                                <img src="~/Content/Templates/ETConfigulation/images/banner_Sql.png" alt="" style="width:100%;">
                            </div><!--cmp-info end-->
                        </div>
                        <div class="col-lg-6">
                            <div class="login-sec">
                                @*<ul class="sign-control">
                                        <li data-tab="tab-1" class="current"><a href="#login" title="">Đăng nhập</a></li>
                                        <li><a href="/Member/Register" onclick="Redirect('/Member/Register');" title="">Đăng ký</a></li>
                                    </ul>*@
                                <div class="sign_in_sec current" id="tab-1">
                                    <h3>Kết nối database</h3>
                                    <form method="post" action="">
                                        <input type="hidden" name="ReturnUrl" id="ReturnUrl" value="@ViewBag.ReturnUrl" />
                                        <div class="row">
                                            <div class="col-lg-12 no-pdd">
                                                <div class="sn-field">
                                                    @Html.TextBoxFor(model => model.Server, new { placeholder = "Server", required = "", oninvalid = "this.setCustomValidity('Bạn chưa nhập server')", oninput = "this.setCustomValidity('')" })
                                                    <i class="la la-server"></i>
                                                </div>
                                            </div>
                                            <div class="col-lg-12 no-pdd">
                                                <div class="sn-field">
                                                    @Html.TextBoxFor(model => model.Database, new { placeholder = "Database", required = "", oninvalid = "this.setCustomValidity('Bạn chưa nhập database')", oninput = "this.setCustomValidity('')" })
                                                    <i class="la la-database"></i>
                                                </div>
                                            </div>
                                            <div class="col-lg-12 no-pdd">
                                                <div class="sn-field">
                                                    @Html.TextBoxFor(model => model.UserLogin, new { placeholder = "Database user", required = "", oninvalid = "this.setCustomValidity('Bạn chưa nhập database user')", oninput = "this.setCustomValidity('')" })
                                                    <i class="la la-user"></i>
                                                </div>
                                            </div>
                                            <div class="col-lg-12 no-pdd">
                                                <div class="sn-field">
                                                    @Html.PasswordFor(model => model.Password, new { placeholder = "Database password", required = "", oninvalid = "this.setCustomValidity('Bạn chưa nhập database password')", oninput = "this.setCustomValidity('')" })
                                                    <i class="la la-lock"></i>
                                                </div>
                                            </div>
                                            <div class="col-lg-12 no-pdd">
                                                <button type="submit" value="submit">Kết nối</button>
                                            </div>
                                        </div>
                                    </form>
                                </div><!--sign_in_sec end-->

                            </div><!--login-sec end-->
                        </div>
                    </div>
                </div><!--signin-pop end-->
            </div><!--signin-popup end-->
            <div class="footy-sec">
                <div class="container">
                    <p><img src="/Content/Templates/ETConfigulation/images/copy-icon.png" alt="">Copyright 2018</p>
                </div>
            </div><!--footy-sec end-->
        </div><!--sign-in-page end-->
    </div><!--theme-layout end-->
    <script type="text/javascript" src="/Content/Templates/ETConfigulation/js/jquery.min.js"></script>
    @*<script type="text/javascript" src="/Content/Templates/ETConfigulation/js/popper.js"></script>*@
    <script type="text/javascript" src="/Content/Templates/ETConfigulation/js/bootstrap.min.js"></script>
    @*<script type="text/javascript" src="/Content/Templates/ETConfigulation/lib/slick/slick.min.js"></script>*@
    <script type="text/javascript" src="/Content/Templates/ETConfigulation/js/script.js"></script>
    <script src="~/Scripts/bootstrap-notify.min.js"></script>
    <script src="~/Scripts/custom.js"></script>
    <script type="text/javascript">
        var successMessage = '@TempData["success"]';
        var errorMessage = '@TempData["error"]';
        if (successMessage != '') {
            ShowMessage('success', 'Thành công!', successMessage, 1000, '');
        }
        if (errorMessage != '') {
            ShowMessage('danger', 'Thông báo!', errorMessage, 500, '');
        }
    </script>
    @*<script type="text/javascript" src="/Content/Templates/ETConfigulation/js/disabled.js"></script>*@
</body>
</html>